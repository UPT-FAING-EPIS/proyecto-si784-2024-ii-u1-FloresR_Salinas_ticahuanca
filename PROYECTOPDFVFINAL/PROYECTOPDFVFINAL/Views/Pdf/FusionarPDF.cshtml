@{
    ViewData["Title"] = "Fusionar PDF";
}

<h2>Fusionar PDF</h2>

<div>
    <form asp-action="FusionarPDF" asp-controller="Pdf" method="post" enctype="multipart/form-data" class="mt-3">
        <div class="form-group">
            <label for="pdf1">Selecciona el primer PDF</label>
            <input type="file" name="pdf1" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="pdf2">Selecciona el segundo PDF</label>
            <input type="file" name="pdf2" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Fusionar PDF</button>
    </form>

    <form asp-action="DescargarPDF" asp-controller="Pdf" method="get" class="mt-3">
        <button type="submit" class="btn btn-secondary">Descargar PDF Fusionado</button>
    </form>

    <a asp-action="Dashboard" asp-controller="Account" class="btn btn-secondary mt-3">Atrás</a>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger mt-3">
            @TempData["ErrorMessage"]
        </div>
    }
</div>