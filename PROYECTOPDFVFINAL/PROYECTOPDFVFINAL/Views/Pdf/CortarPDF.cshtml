@{
    ViewData["Title"] = "Cortar PDF";
}

<h2>Cortar PDF</h2>

<div>
    <form asp-action="CortarPDF" asp-controller="Pdf" method="post" enctype="multipart/form-data" class="mt-3">
        <div class="form-group">
            <label for="pdf">Selecciona el PDF</label>
            <input type="file" name="pdf" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="startPage">Página de Inicio</label>
            <input type="number" name="startPage" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="endPage">Página Final</label>
            <input type="number" name="endPage" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Cortar PDF</button>
    </form>

    <form asp-action="DescargarCortadoPDF" asp-controller="Pdf" method="get" class="mt-3">
        <button type="submit" class="btn btn-secondary">Descargar PDF Cortado</button>
    </form>

    <a asp-action="Dashboard" asp-controller="Account" class="btn btn-secondary mt-3">Atrás</a>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger mt-3">
            @TempData["ErrorMessage"]
        </div>
    }
</div>